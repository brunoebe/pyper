{
    "version": 1,
    "disable_existing_loggers": "false",
    "formatters": {
        "simple": {
            "class": "logging.Formatter",
            "datefmt": "%H:%M:%S",
            "format": "%(asctime)s | %(levelname)-8s %(message)s"
        },
        "detailed": {
            "class": "logging.Formatter",
            "datefmt": "%Y/%m/%d-%H:%M:%S",
            "format": "%(asctime)s | %(levelname)-10s %(message)-35s [%(name)s]"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "WARNING",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "detailed",
            "filename": "~/.pyper/diff.log"
        }
    },
    "loggers": { 
        "pyper.widgets.diff": {
            "handlers": ["file", "console"],
            "level": "DEBUG"
        }
    }
}
